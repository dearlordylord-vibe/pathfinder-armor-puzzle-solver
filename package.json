{
  "name": "pathfinder-puzzle-1-armor-solver",
  "version": "1.0.0",
  "description": "A simple TypeScript project",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm --filter @app/solver build && pnpm --filter @app/state build && pnpm --filter frontend build && mkdir -p public && cp -r apps/frontend/dist/* public/",
    "dev:frontend": "pnpm --filter frontend dev",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.0"
}